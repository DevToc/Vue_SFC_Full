{
  "name": "<%-npmName%>",
  "version": "1.0.0",
  "description": "",

  "main": "dist/<%-componentName%>.ssr.js",
  "browser": "dist/<%-componentName%>.esm.js",
  "module": "dist/<%-componentName%>.esm.js",
  "unpkg": "dist/<%-componentName%>.min.js",
<% if (ts) { -%>
  "types": "<%-componentName%>.d.ts",
<% } -%>

  "files": [
    "dist/*",
<% if (ts) { -%>
    "<%-componentName%>.d.ts",
<% } -%>
    "src/**/*.vue"
  ],

  "scripts": {
    "serve": "vue-cli-service serve dev/serve.<% if (ts) { %>ts<% } else { %>js<% } %>",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
  },

  "dependencies": {
  },

  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
<% if (ts) { -%>
    "@babel/preset-typescript": "^7.10.4",
<% } -%>
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@vue/cli-plugin-babel": "^4.5.4",
<% if (ts) { -%>
    "@vue/cli-plugin-typescript": "^4.5.4",
<% } -%>
    "@vue/cli-service": "^4.5.4",
<% if (version === 3) { -%>
    "@vue/compiler-sfc": "^3.0.0-rc.9",
<% } -%>
    "cross-env": "^7.0.2",
    "minimist": "^1.2.5",
    "rollup": "^2.26.5",
<% if (version === 3) { -%>
    "rollup-plugin-postcss": "^3.1.6",
<% } -%>
    "rollup-plugin-terser": "^7.0.0",
<% if (version === 3) { -%>
    "rollup-plugin-vue": "^6.0.0-beta.10",
<% } else { -%>
    "rollup-plugin-vue": "^5.1.9",
<% } -%>
<% if (ts) { -%>
    "typescript": "^3.8.3",
<% } -%>
<% if (version === 3) { -%>
    "vue": "^3.0.0-rc.9"
<% } else { -%>
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
<% } -%>
  },
  "peerDependencies": {
<% if (version === 3) { -%>
    "vue": "^3.0.0-rc.9"
<% } else { -%>
    "vue": "^2.6.12"
<% } -%>
  },
  "engines": {
    "node": ">=10"
  }
}
